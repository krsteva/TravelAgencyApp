@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center mt-4">
    <div class="col-md-4 d-flex align-items-stretch">
        <section class="w-100">
            <form id="account" method="post">
                <h2 class="text-center" style="color: #FF7D61">Log in to your account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control border-0 border-bottom" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control border-0 border-bottom" type="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        Remember me
                    </label>
                </div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color: #FF7D61; border-color: #FF7D61;">Log in</button>
                <div class="text-center mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 d-flex align-items-stretch justify-content-lg-start">
        <section class="w-100">
            <img src="https://www.pngall.com/wp-content/uploads/8/Vector-Travel-PNG-File.png" alt="Travel illustration" class="m-1" style="max-width: 100%; height: 100%; object-fit: cover; margin-top: -100px;"/>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
