@model TravelAgency.Domain.Models.Itineraries
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create";

    List<SelectListItem> packages = ViewData["packages"] as List<SelectListItem>;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Itineraries</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayNumber" class="control-label"></label>
                <input asp-for="DayNumber" class="form-control" />
                <span asp-validation-for="DayNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArivalTime" class="control-label"></label>
                <input asp-for="ArivalTime" class="form-control" />
                <span asp-validation-for="ArivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartutreTime" class="control-label"></label>
                <input asp-for="DepartutreTime" class="form-control" />
                <span asp-validation-for="DepartutreTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Packages" class="control-label">Packages</label>
                <select id="Packages" name="Packages" class="form-control" multiple>
                    @foreach (var package in packages)
                    {
                        <option value="@package.Value">@package.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
