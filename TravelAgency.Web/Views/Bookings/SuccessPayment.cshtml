@{
    ViewData["Title"] = "Payment Success";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .success-container {
        padding: 40px 20px;
        max-width: 900px;
        margin: 0 auto;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .success-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        text-align: center;
        border-left: 5px solid #2ECC71;
        width: 100%;
    }

    .success-icon {
        color: #2ECC71;
        font-size: 4rem;
        margin-bottom: 1.5rem;
    }

    .success-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2ECC71;
        margin-bottom: 1rem;
    }

    .success-message {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .back-button {
        background-color: #FF7D61;
        color: white;
        padding: 1rem 2.5rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
        font-weight: 500;
        border: none;
    }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 125, 97, 0.2);
            color: white;
            text-decoration: none;
        }
</style>

<div class="success-container">
    <div class="success-card">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 class="success-title">Payment Successful!</h1>
        <p class="success-message">
            Thank you for your payment. Your booking has been confirmed.<br>
            You can view your booking details in your bookings list.
        </p>
        <a asp-controller="Bookings" asp-action="Index" class="back-button">
            View My Bookings
        </a>
    </div>
</div>

<!-- Add Font Awesome for the check icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">