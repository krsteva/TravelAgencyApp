@model TravelAgency.Domain.Models.Bookings
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        padding: 40px 20px;
        max-width: 900px;
        margin: 0 auto;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #FF7D61;
        text-align: center;
        margin-bottom: 2rem;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .booking-title {
        color: #333;
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #FF7D61;
        padding-bottom: 0.5rem;
    }

    .details-row {
        margin-bottom: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }

    .details-label {
        font-weight: 600;
        color: #333;
    }

    .details-value {
        color: #555;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
    }

    .btn-edit {
        background-color: #4A90E2;
        color: white;
        border: none;
    }

    .btn-back {
        background-color: #95A5A6;
        color: white;
        border: none;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        color: white;
        text-decoration: none;
    }
</style>

<div class="details-container">
    <h1 class="page-title">Booking Details</h1>

    <div class="details-card">
        <h4 class="booking-title">Booking Information</h4>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.LastName)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.LastName)
            </div>
        </div>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.Status)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.Status)
            </div>
        </div>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.Passport)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.Passport)
            </div>
        </div>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.DateBooked)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.DateBooked)
            </div>
        </div>

        <div class="row details-row">
            <div class="col-sm-4 details-label">
                @Html.DisplayNameFor(model => model.TravelPackage)
            </div>
            <div class="col-sm-8 details-value">
                @Html.DisplayFor(model => model.TravelPackage.Name)
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="row details-row">
                <div class="col-sm-4 details-label">
                    @Html.DisplayNameFor(model => model.Customer)
                </div>
                <div class="col-sm-8 details-value">
                    @Html.DisplayFor(model => model.CustomerId)
                </div>
            </div>
        }
    </div>

    <div class="action-buttons">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit">Edit</a>
        }
        <a asp-action="Index" class="btn btn-back">Back to List</a>
    </div>
</div>