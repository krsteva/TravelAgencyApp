@model TravelAgency.Domain.Models.Bookings
@{
    List<SelectListItem> status = ViewData["status"] as List<SelectListItem>;
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var thisStatus = ViewData["thisStatus"];
}

<style>
    .edit-container {
        padding: 40px 20px;
        max-width: 900px;
        margin: 0 auto;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #FF7D61;
        text-align: center;
        margin-bottom: 2rem;
    }

    .edit-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .booking-title {
        color: #333;
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #FF7D61;
        padding-bottom: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .control-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ddd;
        padding: 0.75rem;
        width: 100%;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            border-color: #FF7D61;
            box-shadow: 0 0 0 0.2rem rgba(255, 125, 97, 0.25);
            outline: none;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
        border: none;
        cursor: pointer;
    }

    .btn-save {
        background-color: #FF7D61;
        color: white;
    }

    .btn-back {
        background-color: #95A5A6;
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        color: white;
        text-decoration: none;
    }

    .validation-summary-errors {
        color: #dc3545;
        background-color: #fde8e8;
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 1.5rem;
    }

        .validation-summary-errors ul {
            margin-bottom: 0;
            padding-left: 1.5rem;
        }
</style>

<div class="edit-container">
    <h1 class="page-title">Edit Booking</h1>

    <div class="edit-card">
        <h4 class="booking-title">Booking Information</h4>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">First Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Passport" class="control-label">Passport Number</label>
                <input asp-for="Passport" class="form-control" />
                <span asp-validation-for="Passport" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="action-buttons">
                <button type="submit" class="btn btn-save">Save Changes</button>
                <a asp-action="Index" class="btn btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}